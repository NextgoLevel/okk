<script>
const esBtn = document.getElementById('btn-es');
const enBtn = document.getElementById('btn-en');
function setLang(lang){
  document.querySelectorAll('[data-es]').forEach(el=>el.classList.toggle('hidden', lang!=='es'));
  document.querySelectorAll('[data-en]').forEach(el=>el.classList.toggle('hidden', lang!=='en'));
  esBtn.classList.toggle('active', lang==='es'); 
  enBtn.classList.toggle('active', lang==='en');
}
esBtn.addEventListener('click',()=>setLang('es'));
enBtn.addEventListener('click',()=>setLang('en'));
</script>
